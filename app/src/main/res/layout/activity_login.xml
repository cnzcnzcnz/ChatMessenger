<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E94057"
        tools:context=".loginActivity">
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/submit_button"
            app:layout_constraintStart_toStartOf="@+id/password_login"
            app:layout_constraintEnd_toEndOf="@+id/password_login"
            android:background="@drawable/rounded_button_form"
            android:textColor="@android:color/background_light"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/remember_me_checkbox"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_login" android:layout_marginTop="180dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:background="@drawable/rounded_edittext_form" android:hint="Email" android:paddingLeft="20dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_login" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_login"
            app:layout_constraintStart_toStartOf="@+id/email_login"
            app:layout_constraintEnd_toEndOf="@+id/email_login"
            android:background="@drawable/rounded_edittext_form" android:hint="Password" android:paddingLeft="20dp"/>
    <CheckBox
            android:textColor="@android:color/background_light"
            android:text="Remember Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remember_me_checkbox" app:layout_constraintStart_toStartOf="@+id/password_login"
            app:layout_constraintEnd_toEndOf="@+id/password_login" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/password_login" app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>