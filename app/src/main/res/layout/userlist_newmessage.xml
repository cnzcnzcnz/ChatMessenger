<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:paddingBottom="15dp"
                                             android:paddingRight="24dp">

    <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="2dp"
            app:civ_border_color="#FFffff"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/profilepicture_profile"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
            android:text="Username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/username_textview" app:layout_constraintStart_toEndOf="@+id/profilepicture_profile"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@+id/profilepicture_profile"
            app:layout_constraintBottom_toBottomOf="@+id/profilepicture_profile"
    android:textSize="16sp"
    android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>